# Nasiko Platform - Local Development Environment
# Copy this file to .env and fill in your values:
#   cp .env.local.example .env

# ─── Required ────────────────────────────────────────────────────

# OpenAI API key (used by built-in agents)
OPENAI_API_KEY=sk-your-openai-api-key

# Encryption key for stored user credentials (generate with: openssl rand -hex 32)
USER_CREDENTIALS_ENCRYPTION_KEY=your-encryption-key-here

# ─── Authentication ──────────────────────────────────────────────

# Auth mode: "simple" for local/OSS development, "enterprise" for multi-tenant
AUTH_MODE=simple

# GitHub OAuth (optional, for GitHub login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ─── Optional API Keys ──────────────────────────────────────────

# OpenRouter API key (alternative LLM provider)
OPENROUTER_API_KEY=

# ─── Service Ports (optional overrides) ──────────────────────────

# NASIKO_PORT_PHOENIX=6006
# NASIKO_PORT_PHOENIX_GRPC=4317
# NASIKO_PORT_PHOENIX_HTTP=4318

# ─── Superuser (optional) ────────────────────────────────────────

SUPERUSER_EMAIL=admin@nasiko.com
